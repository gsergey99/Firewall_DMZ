#!/bin/bash

# Ping hacia los MZ

set -v

# PINGUEANDO GOOGLE ESPAÑA
ping -c 1 google.es


# PINGUEANDO A WEB SERVER
ping -c 1 10.0.0.2


# PINGUEANDO A ROUTER
ping -c 1 192.168.0.1


# DNS LOOK UP
host google.es

# PETICIÓN PARA OBTENER EL ARCHIVO ALOJADO AL SERVIDO WEB

wget 10.0.0.2:80

# CON NTPDATE ACTUALIZAMOS LA HORA DE EL DISPOTIVO CON LA DEL SERVIDOR
# CAMBIAMOS LA HORA 
sudo date -s 23:00:00

sleep 2

sudo ntpdate 10.0.0.2

sleep 5
# HACEMOS UN DATE PARA VER LA HORA
date
